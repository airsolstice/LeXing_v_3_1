<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Position Button bg -->

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3f616161"/>
            <corners android:radius="40dp"/>
        </shape>
    </item>


    <item
        android:bottom="2.5px"
        android:left="2.5px"
        android:right="2.5px"
        android:top="2.5px">
        <shape android:shape="rectangle">
            <solid android:color="#7f616161"/>
            <corners android:radius="40dp"/>
        </shape>
    </item>


    <!-- White Top color -->
    <item
        android:bottom="4px"
        android:right="4px"
        android:top="4px">
        <shape android:shape="rectangle">
            <solid android:color="#bdbdbd"/>
            <corners android:radius="40dp"/>
            <stroke
                android:color="#ffffff"
                android:width="1dp"
                />
        </shape>
    </item>


    <item
        android:width="60dp"
        android:height="60dp"
        android:bottom="10dp"
        android:drawable="@drawable/opt_head_icon"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"/>


</layer-list>




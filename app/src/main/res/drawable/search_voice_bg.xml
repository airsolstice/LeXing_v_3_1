<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <layer-list>
            <item android:left="30dp">
                <shape android:shape="rectangle">
                    <solid android:color="#6200ea"/>

                </shape>
            </item>
            <item android:width="30dp" android:height="30dp" android:drawable="@drawable/voice"/>
        </layer-list>
    </item>
    <item android:state_enabled="true">
        <layer-list>
            <item android:left="30dp">
                <shape android:shape="rectangle">
                    <solid android:color="#01ffffff"/>
                </shape>
            </item>
            <item android:width="20dp" android:height="25dp" android:drawable="@drawable/voice"/>
        </layer-list>
    </item>
</selector>
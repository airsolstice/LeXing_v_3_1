<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Position Button bg -->

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#7fe65100"/>
            <corners android:radius="40dp"/>
        </shape>
    </item>


    <!-- White Top color -->
    <item

        android:right="2px"
        android:top="4px">
        <shape android:shape="rectangle">
            <solid android:color="#616161"/>
            <corners android:radius="40dp"/>
            <stroke
                android:color="#e65100"
                android:width="4dp"
                />
        </shape>
    </item>


    <item
        android:top="10dp"
        android:left="10dp"
        android:right="10dp"
        android:bottom="10dp"
        android:width="30dp"
        android:height="30dp"
        android:drawable="@drawable/opt_head_icon"/>


</layer-list>




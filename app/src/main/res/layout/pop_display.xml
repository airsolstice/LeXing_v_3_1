<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/pop_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/rect_wbg_shadow_top"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/result_txt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/mark"
            android:background="@color/app_them_color"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="55dp"
            android:text="address"
            android:textSize="15dip"
            android:theme="@style/Base.TextAppearance.AppCompat.Body2"
            />




        <TextView
            android:layout_width="match_parent"
            android:text="周边POI"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#bdbdbd"
            />


        <ListView
            android:id="@+id/poi_list"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ffffff"
            />


    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/pop_navi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:src="@drawable/follow_navi"
        app:backgroundTint="#212121"
        app:borderWidth="0dp"
        app:fabSize="normal"/>


</FrameLayout>
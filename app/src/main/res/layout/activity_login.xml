<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="3">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="@drawable/map_bg">

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="LEXING LOGIN"
            android:textColor="#272636"
            android:textSize="40sp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="2"
        android:background="@drawable/rect_wbg_shadow_top"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_count_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/rect_wbg_btn1"
            android:drawableLeft="@drawable/account"
            android:layout_alignParentTop="true"
            android:hint=" account"
            />


        <EditText
            android:layout_margin="10dp"
            android:id="@+id/login_pwd_view"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/pwd"
            android:layout_height="40dp"
            android:hint="password"
            android:background="@drawable/rect_wbg_btn1"
            />

        <com.hs.lxv3_1.views.CustomProgressBar
            android:id="@+id/custom_bar"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="gone"
            />

        <ProgressBar
            android:id="@+id/login_loging_pbar"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:layout_below="@+id/login_pwd_view"
            android:indeterminateDrawable="@drawable/circle_loading"/>

        <Button
            android:id="@+id/login_log_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/app_them_color"
            android:text="LOGIN"
            android:textColor="#272636"
            android:textSize="20sp"/>

        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#7fbdbdbd"
            />

        <TextView
            android:id="@+id/login_regist_txt"
            android:text="注册"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="#272636"
            android:paddingLeft="30dp"
            android:layout_width="match_parent"
            android:drawableRight="@drawable/arrow_right"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#bdbdbd"
            />

        <TextView
            android:id="@+id/login_forget_txt"
            android:text="忘记密码"
            android:textSize="20sp"
            android:textColor="#272636"
            android:paddingLeft="30dp"
            android:layout_width="match_parent"
            android:drawableRight="@drawable/arrow_right"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#bdbdbd"
            />

    </LinearLayout>


</LinearLayout>

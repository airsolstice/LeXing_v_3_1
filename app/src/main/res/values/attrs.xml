<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="GraphicView">

        <attr name="inputType">
            <enum name="text" value="1"/>
            <enum name="password" value="2"/>
        </attr>
        <attr name="text" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="isSingleLine" format="boolean"/>

        <attr name="src" format="integer"/>
        <attr name="imgWidth" format="dimension"/>
        <attr name="imgHeight" format="dimension"/>

    </declare-styleable>


    <declare-styleable name="TextImageView">
        <attr name="Content">
            <enum name="Default" value="0"></enum>
            <enum name="Count" value="1"></enum>
            <enum name="Password" value="2"></enum>
        </attr>
        <attr name="Text" format="string"/>
        <attr name="Src" format="integer"/>
        <attr name="Oriental">
            <enum name="Horizontal" value="1"></enum>
            <enum name="Vertical" value="0"></enum>
        </attr>
        <attr name="TextColor" format="integer"/>
        <attr name="TextSize" format="integer"/>
    </declare-styleable>


    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>

    </declare-styleable>

</resources>